@model IEnumerable<CadCORE2._2.Models.User>

@{
    ViewData["Title"] = "Início";
}

<h1 class="text-center py-3">Página inicial</h1>

<p>
    
</p>
<table class="table table-dark table-striped container">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.UserID)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.NomeCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th><a asp-action="Create" class="btn btn-outline-success"><i class="fas fa-plus-square" style="color:green"></i> Adicionar</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserID"><i class="fas fa-edit" style="color:blue"></i></a> |
                <a asp-action="Details" asp-route-id="@item.UserID"><i class="fas fa-eye" style="color:grey"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.UserID"><i class="fas fa-trash-alt" style="color:red"></i></a> |
            </td>
        </tr>
}
    </tbody>
</table>
