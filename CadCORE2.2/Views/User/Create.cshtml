@model CadCORE2._2.Models.User

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastro de Usuário</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-12">
                    <label asp-for="NomeCompleto" class="control-label"></label>
                    <input asp-for="NomeCompleto" class="form-control" placeholder="Nome Completo" />
                    <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nascimento" class="control-label"></label>
                    <input asp-for="Nascimento" class="form-control" placeholder="Data de Nascimento"/>
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Salario" class="control-label">Salario R$</label>
                    <input asp-for="Salario" class="form-control" placeholder="Salário" />
                    <span asp-validation-for="Salario" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
